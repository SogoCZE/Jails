// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
    {
        "label": "Run Jails",
        "adapter": "CodeLLDB",
        "request": "launch",
        "cwd": "$ZED_WORKTREE_ROOT",
        "program": "bin/jails",
        "initCommands": [
            "command script import $ZED_WORKTREE_ROOT/.vscode/jaitype.py"
        ],
        "build": {
            "cwd": "$ZED_WORKTREE_ROOT",
            "command": "jai",
            "args": [
                "build.jai"
            ]
        }
    },
    {
        "label": "Attach Jails",
        "adapter": "CodeLLDB",
        "pid": "$ZED_PICK_PID",
        "request": "attach",
        "cwd": "$ZED_WORKTREE_ROOT",
        "initCommands": [
            "command script import $ZED_WORKTREE_ROOT/.vscode/jaitype.py"
        ]
    }
]
